@model TourDate

@{
    ViewData["Title"] = "Create Tour Date";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header gradient-bg border-0 py-3">
                    <h3 class="mb-0 text-white">
                        <i class="fas fa-plus-circle me-2"></i>Create New Tour Date
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PackageID" class="form-label">Tour Package</label>
                                <select asp-for="PackageID" class="form-select" asp-items="ViewBag.PackageID">
                                    <option value="">-- Select a tour package --</option>
                                </select>
                                <span asp-validation-for="PackageID" class="text-danger"></span>
                                <div class="form-text">Choose the tour package for this date</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AvailableDate" class="form-label">Available Date</label>
                                <input asp-for="AvailableDate" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="AvailableDate" class="text-danger"></span>
                                <div class="form-text">Select a future date for the tour</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label">Status</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="Available" selected>Available</option>
                                    <option value="Full">Full</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                                <div class="form-text">Current availability status</div>
                            </div>
                        </div>

                        <!-- Package Preview (will be populated via JavaScript) -->
                        <div id="packagePreview" class="alert alert-info d-none">
                            <h6><i class="fas fa-info-circle me-2"></i>Package Details:</h6>
                            <div id="packageDetails">
                                <!-- Package details will be loaded here -->
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Create Tour Date
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .gradient-bg {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Package preview functionality
        document.getElementById('PackageID').addEventListener('change', function() {
            const packageId = this.value;
            const preview = document.getElementById('packagePreview');

            if (packageId) {
                // In a real application, you would make an AJAX call to get package details
                // For now, we'll show a placeholder
                document.getElementById('packageDetails').innerHTML = `
                    <p class="mb-1"><strong>Package ID:</strong> ${packageId}</p>
                    <p class="mb-0"><small class="text-muted">Package details will be loaded...</small></p>
                `;
                preview.classList.remove('d-none');
            } else {
                preview.classList.add('d-none');
            }
        });

        // Validate date is not in the past
        document.querySelector('form').addEventListener('submit', function(e) {
            const dateInput = document.getElementById('AvailableDate');
            const selectedDate = new Date(dateInput.value);
            const today = new Date();
            today.setHours(0, 0, 0, 0);

            if (selectedDate < today) {
                e.preventDefault();
                alert('Please select a date that is today or in the future.');
                dateInput.focus();
            }
        });
    </script>
}