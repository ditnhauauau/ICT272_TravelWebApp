@model Booking

@{
    ViewData["Title"] = "Delete Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white border-0 py-3">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Booking
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this booking? This action cannot be undone.
                    </div>

                    <div class="booking-info bg-light p-3 rounded mb-4">
                        <h5 class="mb-3">
                            <i class="fas fa-calendar-check me-2"></i>Booking #@Html.DisplayFor(model => model.BookingID)
                        </h5>

                        <div class="row">
                            <div class="col-sm-6 mb-2">
                                <strong>Tourist:</strong>
                            </div>
                            <div class="col-sm-6 mb-2">
                                @Html.DisplayFor(model => model.Tourist.FullName)
                            </div>

                            <div class="col-sm-6 mb-2">
                                <strong>Email:</strong>
                            </div>
                            <div class="col-sm-6 mb-2">
                                @Html.DisplayFor(model => model.Tourist.Email)
                            </div>

                            <div class="col-sm-6 mb-2">
                                <strong>Tour Package:</strong>
                            </div>
                            <div class="col-sm-6 mb-2">
                                @Html.DisplayFor(model => model.TourDate.TourPackage.Title)
                            </div>

                            <div class="col-sm-6 mb-2">
                                <strong>Available Date:</strong>
                            </div>
                            <div class="col-sm-6 mb-2">
                                @Html.DisplayFor(model => model.TourDate.AvailableDate)
                            </div>

                            <div class="col-sm-6 mb-2">
                                <strong>Booking Date:</strong>
                            </div>
                            <div class="col-sm-6 mb-2">
                                @Html.DisplayFor(model => model.BookingDate)
                            </div>

                            <div class="col-sm-6 mb-2">
                                <strong>Status:</strong>
                            </div>
                            <div class="col-sm-6 mb-2">
                                @{
                                    string statusClass = Model.Status switch
                                    {
                                        "Confirmed" => "bg-success",
                                        "Pending" => "bg-warning",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass status-badge">@Html.DisplayFor(model => model.Status)</span>
                            </div>

                            <div class="col-sm-6 mb-2">
                                <strong>Payment Status:</strong>
                            </div>
                            <div class="col-sm-6 mb-2">
                                @{
                                    string paymentClass = Model.PaymentStatus switch
                                    {
                                        "Paid" => "bg-success",
                                        "Partial" => "bg-warning",
                                        "Unpaid" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @paymentClass status-badge">@Html.DisplayFor(model => model.PaymentStatus)</span>
                            </div>
                        </div>
                    </div>

                    @if (Model.Feedbacks != null && Model.Feedbacks.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-comment me-2"></i>
                            <strong>Note:</strong> This booking has @Model.Feedbacks.Count() feedback(s) that will also be deleted.
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        @Html.HiddenFor(model => model.BookingID)

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Delete Booking
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.BookingID" class="btn btn-info">
                                <i class="fas fa-eye me-2"></i>View Details
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .status-badge {
        font-size: 0.8em;
        padding: 0.4em 0.8em;
        border-radius: 20px;
    }
</style>