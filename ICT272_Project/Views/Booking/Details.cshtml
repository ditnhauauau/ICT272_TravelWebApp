@model Booking

@{
    ViewData["Title"] = "Booking Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header gradient-bg border-0 py-3">
                    <h3 class="mb-0 text-white">
                        <i class="fas fa-info-circle me-2"></i>Booking Details
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>@Html.DisplayNameFor(model => model.BookingID):</strong>
                            <p class="mb-1">#@Html.DisplayFor(model => model.BookingID)</p>
                        </div>

                        <div class="col-md-6 mb-3">
                            <strong>Tourist:</strong>
                            <p class="mb-1">@Html.DisplayFor(model => model.Tourist.FullName)</p>
                            <small class="text-muted">@Html.DisplayFor(model => model.Tourist.Email)</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <strong>Contact Number:</strong>
                            <p class="mb-1">
                                @if (!string.IsNullOrEmpty(Model.Tourist.ContactNumber))
                                {
                                    @Html.DisplayFor(model => model.Tourist.ContactNumber)
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </p>
                        </div>

                        <div class="col-md-6 mb-3">
                            <strong>Tour Package:</strong>
                            <p class="mb-1">@Html.DisplayFor(model => model.TourDate.TourPackage.Title)</p>
                        </div>

                        <div class="col-md-6 mb-3">
                            <strong>Available Date:</strong>
                            <p class="mb-1">@Html.DisplayFor(model => model.TourDate.AvailableDate)</p>
                        </div>

                        <div class="col-md-6 mb-3">
                            <strong>@Html.DisplayNameFor(model => model.BookingDate):</strong>
                            <p class="mb-1">@Html.DisplayFor(model => model.BookingDate)</p>
                        </div>

                        <div class="col-md-6 mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Status):</strong>
                            <p class="mb-1">
                                @{
                                    string statusClass = Model.Status switch
                                    {
                                        "Confirmed" => "bg-success",
                                        "Pending" => "bg-warning",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass status-badge">@Html.DisplayFor(model => model.Status)</span>
                            </p>
                        </div>

                        <div class="col-md-6 mb-3">
                            <strong>@Html.DisplayNameFor(model => model.PaymentStatus):</strong>
                            <p class="mb-1">
                                @{
                                    string paymentClass = Model.PaymentStatus switch
                                    {
                                        "Paid" => "bg-success",
                                        "Partial" => "bg-warning",
                                        "Unpaid" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @paymentClass status-badge">@Html.DisplayFor(model => model.PaymentStatus)</span>
                            </p>
                        </div>
                    </div>

                    @if (Model.Feedbacks != null && Model.Feedbacks.Any())
                    {
                        <hr class="my-4">
                        <h5>Customer Feedback</h5>
                        <div class="row">
                            @foreach (var feedback in Model.Feedbacks)
                            {
                                <div class="col-12 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div class="rating">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= feedback.Rating)
                                                        {
                                                            <i class="fas fa-star text-warning"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="far fa-star text-muted"></i>
                                                        }
                                                    }
                                                </div>
                                                <small class="text-muted">@feedback.Date.ToString("MMM dd, yyyy")</small>
                                            </div>
                                            @if (!string.IsNullOrEmpty(feedback.Comment))
                                            {
                                                <p class="mb-0">@feedback.Comment</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <div class="d-flex gap-2 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.BookingID" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .gradient-bg {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .status-badge {
        font-size: 0.8em;
        padding: 0.4em 0.8em;
        border-radius: 20px;
    }
</style>